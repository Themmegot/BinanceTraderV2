# .env.example

# Flask settings
#FLASK_ENV=development
FLASK_ENV=production
SECRET_KEY=your-secret-key-here

# Webhook security
WEBHOOK_PASSPHRASE=your-secure-passphrase-here

# Binance API (Production)
BINANCE_API_KEY=your-binance-api-key-here
BINANCE_API_SECRET=your-binance-api-secret-here

# Binance API (Testnet)
API_KEY_TEST=your-testnet-api-key-here
API_SECRET_TEST=your-testnet-api-secret-here

# Toggle testnet mode (True for testnet, False for live) (case-sensitive in Python)
USE_TESTNET=True

# Celery & Redis
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0

# Logging level
LOG_LEVEL=INFO
